{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/*"],
  "compileOnSave": false,
  "buildOnSave": false
}
